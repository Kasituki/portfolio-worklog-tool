<Window x:Class="PortfolioApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="工数/原価集計ツール" Height="760" Width="1000"
        Background="{DynamicResource BackgroundBrush}">
    
    <Window.Resources>
        <!-- カラーパレット（社内業務ツール風） -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#1565C0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#0288D1"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F57C00"/>
        <SolidColorBrush x:Key="DataGridAlternateBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="UnupdatedBrush" Color="#F57C00"/>
        
        <!-- 更新状態の文字列リソース -->
        <sys:String x:Key="PeriodUnupdatedText">● 未更新（期間変更あり）</sys:String>
        <sys:String x:Key="PeriodUpdatedPrefix">✓ 更新済（最終更新: </sys:String>
        <sys:String x:Key="PeriodUpdatedSuffix">）</sys:String>
        
        <!-- Primaryボタンスタイル（重要アクション用） -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondaryボタンスタイル（補助アクション用） -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FAFAFA"/>
                                <Setter Property="Foreground" Value="#BDBDBD"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CardBorderスタイル -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- 見出しTextBlockスタイル -->
        <Style x:Key="HeadingTextBlock" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- ラベルTextBlockスタイル -->
        <Style x:Key="LabelTextBlock" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 値TextBlockスタイル -->
        <Style x:Key="ValueTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- DataGridスタイル -->
        <Style x:Key="BusinessDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DataGridAlternateBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="ColumnHeaderHeight" Value="36"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 空状態TextBlockスタイル -->
        <Style x:Key="EmptyStateTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="24"/>
        </Style>

        <!-- 更新状態スタイル -->
        <Style x:Key="UpdateStatusTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>

        <!-- 取得ボタンスタイル（タブ内の主要アクション） -->
        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 取込結果サマリパネル -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}"
                Margin="0,0,0,16"
                Visibility="{Binding ImportSummaryVisibility}">
            <StackPanel>
                <TextBlock Text="CSV取込結果サマリ" Style="{StaticResource HeadingTextBlock}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="取込日時：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ImportDateTime}" 
                               Style="{StaticResource ValueTextBlock}" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="モード：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ImportMode}" 
                               Foreground="{StaticResource AccentBrush}" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="CSVファイル：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ImportFileName}" 
                               Style="{StaticResource ValueTextBlock}" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="読込件数：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalReadCount}" 
                               Style="{StaticResource ValueTextBlock}" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="投入予定件数：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PlannedInsertCount}" 
                               Style="{StaticResource ValueTextBlock}" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="投入件数：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding InsertedCount}" 
                               Style="{StaticResource ValueTextBlock}" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="スキップ内訳：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SkipDetails}" 
                               Style="{StaticResource ValueTextBlock}" TextWrapping="Wrap" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="エラーログ：" 
                               Style="{StaticResource LabelTextBlock}" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding ErrorLogPath}" 
                               Style="{StaticResource ValueTextBlock}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- CSV取込ボタン（共通） -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="CSV取込" Style="{StaticResource HeadingTextBlock}"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnImportCsv" Content="CSV取込" 
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,8,0" Click="BtnImportCsv_Click"/>
                    
                    <Button x:Name="BtnOpenLog" Content="エラーログを開く"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0" Click="BtnOpenLog_Click"
                            IsEnabled="{Binding HasErrorLog}"/>
                    
                    <CheckBox x:Name="ChkDryRun" Content="投入せず検査のみ（ドライラン）"
                              IsChecked="{Binding IsDryRun}" VerticalAlignment="Center"
                              Margin="16,0,0,0" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 共通期間設定パネル -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="0,0,0,16"
                BorderBrush="{StaticResource AccentBrush}">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="分析期間（全タブ共通）" 
                               Style="{StaticResource HeadingTextBlock}"
                               Foreground="{StaticResource AccentBrush}" Margin="0"/>
                    
                    <!-- 更新状態表示 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                Visibility="{Binding PeriodUpdateStatusVisible}">
                        <Ellipse x:Name="UpdateStatusIndicator" Width="8" Height="8" 
                                 Fill="{StaticResource UnupdatedBrush}"/>
                        <TextBlock x:Name="UpdateStatusText" 
                                   Text="{Binding PeriodUpdateStatus}"
                                   Style="{StaticResource UpdateStatusTextBlock}"/>
                    </StackPanel>
                </Grid>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="From:" Style="{StaticResource LabelTextBlock}" Margin="0,0,8,0"/>
                    <DatePicker x:Name="CommonDateFrom" Width="140" Margin="0,0,16,0" 
                                SelectedDate="{Binding CommonFromDate}"
                                SelectedDateChanged="CommonDatePicker_SelectedDateChanged"/>
                    
                    <TextBlock Text="To:" Style="{StaticResource LabelTextBlock}" Margin="0,0,8,0"/>
                    <DatePicker x:Name="CommonDateTo" Width="140" Margin="0,0,16,0" 
                                SelectedDate="{Binding CommonToDate}"
                                SelectedDateChanged="CommonDatePicker_SelectedDateChanged"/>
                    
                    <Button x:Name="BtnSetCommonDateRange" Content="全期間を自動設定"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,16,0" Click="BtnSetCommonDateRange_Click"
                            ToolTip="DBの最古〜最新日付を自動設定"/>
                    
                    <TextBlock Text="※ 期間変更後、各タブで取得ボタンをクリックしてください" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="11" FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- タブコントロール -->
        <TabControl Grid.Row="3" Background="Transparent" BorderThickness="0">
            <!-- タブ1: 月別工数 -->
            <TabItem Header="月別工数">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- アクション行（左右配置） -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="BtnGetMonthly" Grid.Column="0"
                                Content="月別工数を取得"
                                Style="{StaticResource ActionButton}"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding CanGetData}"
                                Click="BtnGetMonthly_Click"/>
                        
                        <Button x:Name="BtnExportMonthlyCsv" Grid.Column="1"
                                Content="CSV出力"
                                Style="{StaticResource SecondaryButton}"
                                IsEnabled="{Binding IsMonthlyDataLoaded}"
                                Click="BtnExportMonthlyCsv_Click"/>
                    </Grid>

                    <!-- 結果表（DataGrid） + 空状態 -->
                    <Border Grid.Row="1" Style="{StaticResource CardBorder}" 
                            Margin="0,0,0,16">
                        <Grid>
                            <DataGrid x:Name="GridMonthly" 
                                      Style="{StaticResource BusinessDataGrid}"
                                      BorderThickness="0"
                                      AutoGenerateColumns="False"
                                      Height="120"
                                      MaxHeight="280"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="月" Binding="{Binding Month}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="工数合計 (Hours)" Binding="{Binding TotalHours, StringFormat=N2}" Width="160">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,12,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="EmptyStateMonthly" 
                                       Style="{StaticResource EmptyStateTextBlock}"
                                       Text="データがありません。&#x0a;上部で期間を設定後、「月別工数を取得」ボタンをクリックしてください。"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- グラフ（折りたたみ可能） -->
                    <Border x:Name="ChartContainerMonthly" Grid.Row="2" 
                            Style="{StaticResource CardBorder}">
                        <oxy:PlotView x:Name="ChartMonthly" MinHeight="180"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- タブ2: 案件別工数 -->
            <TabItem Header="案件別工数">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- アクション行（左右配置） -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="BtnGetProject" Grid.Column="0"
                                Content="案件別工数を取得"
                                Style="{StaticResource ActionButton}"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding CanGetData}"
                                Click="BtnGetProject_Click"/>
                        
                        <Button x:Name="BtnExportProjectCsv" Grid.Column="1"
                                Content="CSV出力"
                                Style="{StaticResource SecondaryButton}"
                                IsEnabled="{Binding IsProjectDataLoaded}"
                                Click="BtnExportProjectCsv_Click"/>
                    </Grid>

                    <!-- 結果表（DataGrid） + 空状態 -->
                    <Border Grid.Row="1" Style="{StaticResource CardBorder}" 
                            Margin="0,0,0,16">
                        <Grid>
                            <DataGrid x:Name="GridProject" 
                                      Style="{StaticResource BusinessDataGrid}"
                                      BorderThickness="0"
                                      AutoGenerateColumns="False"
                                      Height="120"
                                      MaxHeight="280"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="案件名" Binding="{Binding Project}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="工数合計 (Hours)" Binding="{Binding TotalHours, StringFormat=N2}" Width="160">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,12,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="EmptyStateProject" 
                                       Style="{StaticResource EmptyStateTextBlock}"
                                       Text="データがありません。&#x0a;上部で期間を設定後、「案件別工数を取得」ボタンをクリックしてください。"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- グラフ（折りたたみ可能） -->
                    <Border x:Name="ChartContainerProject" Grid.Row="2" 
                            Style="{StaticResource CardBorder}">
                        <oxy:PlotView x:Name="ChartProject" MinHeight="180"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- タブ3: メンバー別工数 -->
            <TabItem Header="メンバー別工数">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- アクション行（左右配置） -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="BtnGetMember" Grid.Column="0"
                                Content="メンバー別工数を取得"
                                Style="{StaticResource ActionButton}"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding CanGetData}"
                                Click="BtnGetMember_Click"/>
                        
                        <Button x:Name="BtnExportMemberCsv" Grid.Column="1"
                                Content="CSV出力"
                                Style="{StaticResource SecondaryButton}"
                                IsEnabled="{Binding IsMemberDataLoaded}"
                                Click="BtnExportMemberCsv_Click"/>
                    </Grid>

                    <!-- 結果表（DataGrid） + 空状態 -->
                    <Border Grid.Row="1" Style="{StaticResource CardBorder}" 
                            Margin="0,0,0,16">
                        <Grid>
                            <DataGrid x:Name="GridMember" 
                                      Style="{StaticResource BusinessDataGrid}"
                                      BorderThickness="0"
                                      AutoGenerateColumns="False"
                                      Height="120"
                                      MaxHeight="280"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="メンバー名" Binding="{Binding Member}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="工数合計 (Hours)" Binding="{Binding TotalHours, StringFormat=N2}" Width="160">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,12,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="EmptyStateMember" 
                                       Style="{StaticResource EmptyStateTextBlock}"
                                       Text="データがありません。&#x0a;上部で期間を設定後、「メンバー別工数を取得」ボタンをクリックしてください。"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- グラフ（折りたたみ可能） -->
                    <Border x:Name="ChartContainerMember" Grid.Row="2" 
                            Style="{StaticResource CardBorder}">
                        <oxy:PlotView x:Name="ChartMember" MinHeight="180"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
